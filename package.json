{
  "name": "node_js_school",
  "description": "Node js school",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && rm -rf ./dist/db/scripts && cp -r src/db/scripts ./dist/db/scripts",
    "test": "jest",
    "start-dev": "tsc && rm -rf ./dist/db/scripts && cp -r src/db/scripts ./dist/db/scripts && nodemon dist/app.js",
    "start": "export NODE_ENV=production && tsc && rm -rf ./dist/db/scripts && cp -r src/db/scripts ./dist/db/scripts && node dist/app.js",
    "start-docker-dev": "export NODE_ENV=local-docker && tsc && rm -rf ./dist/db/scripts && cp -r src/db/scripts ./dist/db/scripts && node --inspect=0.0.0.0:9229 dist/app.js",
    "start-docker": "export NODE_ENV=docker && tsc && rm -rf ./dist/db/scripts && cp -r src/db/scripts ./dist/db/scripts && node dist/app.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "docker-build": "docker build --pull --rm -f 'Dockerfile' -t szkolkanodejs:latest '.'",
    "docker-compose": "docker compose -f 'docker-compose.yml' up -d --build",
    "docker-compose-dev": "docker compose -f 'docker-compose.debug.yml' up -d --build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aziarnik/szkolka_node_js.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Artur",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/aziarnik/szkolka_node_js/issues"
  },
  "homepage": "https://github.com/aziarnik/szkolka_node_js#readme",
  "dependencies": {
    "body-parser": "^1.20.0",
    "config": "^3.3.8",
    "express": "^4.18.1",
    "joi": "^17.6.2",
    "path": "^0.12.7",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.3",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
